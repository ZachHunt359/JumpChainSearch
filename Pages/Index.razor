    private string ExtractGoogleDriveFileId(string url)
    {
        if (string.IsNullOrEmpty(url))
            return "";

        // Handle different Google Drive URL patterns
        // Pattern 1: /file/d/{fileId}/view
        var match = System.Text.RegularExpressions.Regex.Match(url, @"/file/d/([a-zA-Z0-9-_]+)");
        if (match.Success)
            return match.Groups[1].Value;

        // Pattern 2: /document/d/{fileId}/edit
        match = System.Text.RegularExpressions.Regex.Match(url, @"/document/d/([a-zA-Z0-9-_]+)");
        if (match.Success)
            return match.Groups[1].Value;

        // Pattern 3: id={fileId} parameter
        match = System.Text.RegularExpressions.Regex.Match(url, @"[?&]id=([a-zA-Z0-9-_]+)");
        if (match.Success)
            return match.Groups[1].Value;

        // Pattern 4: /d/{fileId}/ in various contexts
        match = System.Text.RegularExpressions.Regex.Match(url, @"/d/([a-zA-Z0-9-_]+)/");
        if (match.Success)
            return match.Groups[1].Value;

        return "";
    }

