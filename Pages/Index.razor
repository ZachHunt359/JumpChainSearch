    private async Task SuggestTag()
    {
        if (selectedDocument == null || string.IsNullOrWhiteSpace(newTagName)) return;

        try
        {
            var request = new
            {
                DocumentId = selectedDocument.Id,
                TagName = newTagName.Trim(),
                TagCategory = newTagCategory,
                UserId = userId
            };

            var response = await Http.PostAsJsonAsync("/api/voting/suggest-tag", request);
            if (response.IsSuccessStatusCode)
            {
                // Reload pending items
                await LoadPendingItemsForDocument(selectedDocument.Id);
                
                // Close dialog and reset form
                CloseSuggestDialog();
                
                StateHasChanged();
            }
        }
        catch
        {
            // Handle error silently for now
        }
    }

