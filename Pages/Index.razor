@page "/"
@using System.Text.Json
@using System.Text.Json.Serialization
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject NavigationManager NavigationManager

<PageTitle>JumpChain Search</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4 mb-3">🚀 JumpChain Search</h1>
            <p class="lead text-muted">Real-time search across 7,283+ JumpChain documents</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-10 offset-md-1">
            <div class="search-container">
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-primary text-white">
                        <i class="fas fa-search"></i>
                    </span>
                    <input type="text" class="form-control" placeholder="Search for jumps, supplements, gauntlets... (type to search instantly)" 
                           @bind="searchQuery" @bind:event="oninput" @onkeyup="OnSearchInput">
                </div>
                
                @if (isSearching)
                {
                    <div class="search-status mt-2">
                        <small class="text-muted">
                            <span class="spinner-border spinner-border-sm me-1"></span>
                            Searching...
                        </small>
                    </div>
                }
                else if (!string.IsNullOrEmpty(searchQuery) && searchResults.Any())
                {
                    <div class="search-status mt-2">
                        <small class="text-success">
                            <i class="fas fa-check-circle me-1"></i>
                            Found <strong>@searchResults.Count()</strong> documents matching "@searchQuery"
                        </small>
                    </div>
                }
                else if (!string.IsNullOrEmpty(searchQuery) && !searchResults.Any() && !isSearching)
                {
                    <div class="search-status mt-2">
                        <small class="text-warning">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            No documents found for "@searchQuery"
                        </small>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Tag Filter Panel -->
    @if (availableTags.Any() || selectedTags.Any())
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="tag-filter-wrapper">
                    <h6 class="mb-3">
                        <i class="fas fa-filter me-2"></i>Filter by Tags
                        @if (HasAnyTagFilters())
                        {
                            <button class="btn btn-outline-secondary btn-sm ms-2" @onclick="ClearAllTags">
                                <i class="fas fa-times me-1"></i>Clear All
                            </button>
                        }
                    </h6>
                    
                    @if (HasAnyTagFilters())
                    {
                        <div class="selected-tags mb-3">
                            <small class="text-muted d-block mb-2">Active Filters:</small>
                            @if (includedTags.Any())
                            {
                                <div class="mb-1">
                                    <small class="text-success fw-bold">Include:</small>
                                    @foreach (var tag in includedTags)
                                    {
                                        <span class="badge bg-success me-1 mb-1 clickable-tag" @onclick="() => ToggleTagFilter(tag)" title="Click to exclude this tag instead">
                                            @tag <i class="fas fa-check ms-1"></i>
                                        </span>
                                    }
                                </div>
                            }
                            @if (excludedTags.Any())
                            {
                                <div class="mb-1">
                                    <small class="text-danger fw-bold">Exclude:</small>
                                    @foreach (var tag in excludedTags)
                                    {
                                        <span class="badge bg-danger me-1 mb-1 clickable-tag" @onclick="() => ToggleTagFilter(tag)" title="Click to remove this filter">
                                            @tag <i class="fas fa-times ms-1"></i>
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    }
                    
                    @if (availableTags.Any())
                    {
                        <div class="tag-filter-compact">
                            @foreach (var category in availableTags.GroupBy(t => t.Category).OrderBy(g => GetCategoryOrder(g.Key)))
                            {
                                <div class="tag-category-inline mb-2">
                                    <span class="category-label">@category.Key:</span>
                                    @foreach (var tag in category.OrderByDescending(t => t.Count))
                                    {
                                        <span class="badge @GetTagFilterClass(tag.Name) me-1 mb-1 clickable-tag" 
                                              @onclick="() => ToggleTagFilter(tag.Name)"
                                              title="@GetTagFilterTitle(tag.Name, tag.Count)">
                                            @tag.Name (@tag.Count)
                                        </span>
                                    }
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    }

    @if (searchResults.Any())
    {
        <!-- Pagination controls - Top -->
        <div class="row mb-3">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <div class="pagination-info">
                        <span class="text-muted">
                            Showing <strong>@((currentPage - 1) * pageSize + 1)</strong> - <strong>@Math.Min(currentPage * pageSize, totalResults)</strong> of <strong>@totalResults</strong>
                        </span>
                    </div>
                    <div class="d-flex align-items-center gap-2">
                        <label class="mb-0 me-2 text-muted">Results per page:</label>
                        <select class="form-select form-select-sm" style="width: auto;" @onchange="OnPageSizeChanged">
                            @foreach (var size in pageSizeOptions)
                            {
                                <option value="@size" selected="@(size == pageSize)">@size</option>
                            }
                        </select>
                    </div>
                    @RenderPaginationControls()
                </div>
            </div>
        </div>
        
        <div class="row">
            <div class="col-12">
                <div class="results-container">
                    @foreach (var document in searchResults)
                    {
                        <div class="result-item mb-3">
                            <div class="card shadow-sm clickable-card" @onclick="() => ShowDocumentDetails(document)">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-8">
                                            <h6 class="card-title text-primary mb-1">
                                                <i class="fas @GetFileIcon(document.MimeType) me-1"></i>
                                                @document.Name
                                                @if (document.HasMultipleUrls)
                                                {
                                                    <span class="badge bg-info ms-2" title="Available on multiple drives">
                                                        <i class="fas fa-clone me-1"></i>@(document.Urls.Count + 1) sources
                                                    </span>
                                                }
                                            </h6>
                                            <div class="document-meta mb-2 small text-muted">
                                                <i class="fas fa-weight me-1"></i> @FormatFileSize(document.Size)
                                                <span class="mx-2">•</span>
                                                <i class="fas fa-calendar me-1"></i> @document.ModifiedTime.ToString("MMM dd, yyyy")
                                                <span class="mx-2">•</span>
                                                <i class="fas fa-hdd me-1"></i> @document.SourceDrive
                                            </div>
                                            @if (!string.IsNullOrEmpty(document.Description))
                                            {
                                                <p class="card-text small text-secondary mb-2">@document.Description</p>
                                            }
                                            @if (document.Tags != null && document.Tags.Any())
                                            {
                                                <div class="tags-container mb-2">
                                                    @foreach (var tag in document.Tags.Take(8)) // Show fewer tags to save space
                                                    {
                                                        <span class="badge @GetTagColor(tag) me-1 mb-1 clickable-tag" 
                                                              @onclick:stopPropagation="true"
                                                              @onclick="() => ToggleTagFilter(tag)" 
                                                              title="Click to filter by this tag">
                                                            @tag
                                                        </span>
                                                    }
                                                    @if (document.Tags.Count > 8)
                                                    {
                                                        <span class="badge bg-secondary">+@(document.Tags.Count - 8) more</span>
                                                    }
                                                </div>
                                            }
                                        </div>
                                        <div class="col-md-4 text-md-end">
                                            <div class="d-flex flex-column gap-1 align-items-end">
                                                @if (!string.IsNullOrEmpty(document.WebViewLink))
                                                {
                                                    <a href="@document.WebViewLink" target="_blank" class="btn btn-primary btn-sm"
                                                       @onclick:stopPropagation="true">
                                                        <i class="fas fa-external-link-alt me-1"></i> Open
                                                    </a>
                                                }
                                                <small class="text-muted">
                                                    <i class="fas fa-info-circle me-1"></i>Click for details
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Pagination controls - Bottom -->
        <div class="row mt-3">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <div class="pagination-info">
                        <span class="text-muted">
                            Showing <strong>@((currentPage - 1) * pageSize + 1)</strong> - <strong>@Math.Min(currentPage * pageSize, totalResults)</strong> of <strong>@totalResults</strong>
                        </span>
                    </div>
                    @RenderPaginationControls()
                </div>
            </div>
        </div>
    }
    else if (!string.IsNullOrEmpty(searchQuery) && !isSearching)
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="alert alert-warning">
                    <h5><i class="fas fa-search"></i> No results found</h5>
                    <p>No documents match "<strong>@searchQuery</strong>". Try different search terms.</p>
                </div>
            </div>
        </div>
    }
    else if (string.IsNullOrEmpty(searchQuery))
    {
        <div class="row">
            <div class="col-12 text-center">
                <div class="welcome-section">
                    <div class="mb-4">
                        <h3><i class="fas fa-rocket me-2"></i>Start Your JumpChain Adventure</h3>
                        <p class="text-muted">Search through thousands of JumpChain documents instantly</p>
                    </div>
                    <div class="row text-start">
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="fas fa-search fa-2x text-primary mb-2"></i>
                                    <h6>Instant Search</h6>
                                    <small class="text-muted">Results appear as you type</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="fas fa-database fa-2x text-success mb-2"></i>
                                    <h6>7,283+ Documents</h6>
                                    <small class="text-muted">Across multiple Google Drives</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card border-0 shadow-sm">
                                <div class="card-body text-center">
                                    <i class="fas fa-external-link-alt fa-2x text-info mb-2"></i>
                                    <h6>Direct Links</h6>
                                    <small class="text-muted">Open documents directly in Google Drive</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Document Details Modal -->
@if (selectedDocument != null && showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="fas @GetFileIcon(selectedDocument.MimeType) me-2"></i>
                        @selectedDocument.Name
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <!-- Thumbnail/Icon Column -->
                        <div class="col-md-4 mb-3">
                            <div class="thumbnail-container">
                                @{
                                    var generatedThumbnail = GenerateGoogleDriveThumbnail(selectedDocument.WebViewLink, selectedDocument.MimeType);
                                    var hasApiThumbnail = selectedDocument.HasThumbnail && !string.IsNullOrEmpty(selectedDocument.ThumbnailLink);
                                    var thumbnailUrl = hasApiThumbnail ? selectedDocument.ThumbnailLink : generatedThumbnail;
                                }

                                @if (!string.IsNullOrEmpty(thumbnailUrl))
                                {
                                    <!-- Show thumbnail as image (either from API or generated) -->
                                    <div class="position-relative">
                                        <img src="@thumbnailUrl" 
                                             alt="Document preview" 
                                             class="img-fluid rounded shadow-sm thumbnail-image" 
                                             style="max-height: 200px; width: 100%; object-fit: contain; background: #f8f9fa;"
                                             onload="this.nextElementSibling.style.display='none';"
                                             onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                                        
                                        <!-- Fallback file icon (shown while loading or on error) -->
                                        <div class="file-icon-fallback d-flex flex-column align-items-center justify-content-center" 
                                             style="min-height: 200px; background: var(--bs-light); border-radius: 8px; border: 2px dashed var(--bs-border-color);">
                                            <i class="fas @GetFileIcon(selectedDocument.MimeType) fa-4x text-primary mb-2"></i>
                                            <div class="text-muted small fw-medium">@GetFileTypeLabel(selectedDocument.MimeType)</div>
                                            <div class="text-muted small">@FormatFileSize(selectedDocument.Size)</div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <!-- Show file type icon when no thumbnail is possible -->
                                    <div class="file-icon-container d-flex flex-column align-items-center justify-content-center" 
                                         style="min-height: 200px; background: var(--bs-light); border-radius: 8px; border: 2px dashed var(--bs-border-color);">
                                        <i class="fas @GetFileIcon(selectedDocument.MimeType) fa-5x text-primary mb-2"></i>
                                        <div class="text-muted small fw-medium">@GetFileTypeLabel(selectedDocument.MimeType)</div>
                                        <div class="text-muted small">@FormatFileSize(selectedDocument.Size)</div>
                                    </div>
                                }
                            </div>
                        </div>
                        
                        <!-- Document Info Column -->
                        <div class="col-md-8">
                            <div class="document-details">
                                <h6 class="text-primary mb-3">
                                    <i class="fas fa-info-circle me-1"></i>Document Information
                                </h6>
                                
                                <div class="info-grid">
                                    <div class="row mb-2">
                                        <div class="col-4 fw-bold text-muted">Size:</div>
                                        <div class="col-8">@FormatFileSize(selectedDocument.Size)</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4 fw-bold text-muted">Modified:</div>
                                        <div class="col-8">@selectedDocument.ModifiedTime.ToString("MMMM dd, yyyy 'at' hh:mm tt")</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4 fw-bold text-muted">Type:</div>
                                        <div class="col-8">@GetFileTypeDescription(selectedDocument.MimeType)</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-4 fw-bold text-muted">Primary Drive:</div>
                                        <div class="col-8">@selectedDocument.SourceDrive</div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(selectedDocument.FolderPath))
                                    {
                                        <div class="row mb-2">
                                            <div class="col-4 fw-bold text-muted">Path:</div>
                                            <div class="col-8 small text-break">@selectedDocument.FolderPath</div>
                                        </div>
                                    }
                                </div>
                                
                                @if (!string.IsNullOrEmpty(selectedDocument.Description))
                                {
                                    <div class="mt-3">
                                        <h6 class="text-primary">
                                            <i class="fas fa-file-text me-1"></i>Description
                                        </h6>
                                        <p class="text-secondary">@selectedDocument.Description</p>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <!-- Access Links Section -->
                    <div class="mt-4">
                        <h6 class="text-primary mb-3">
                            <i class="fas fa-link me-1"></i>Access Links
                            @if (selectedDocument.HasMultipleUrls)
                            {
                                <span class="badge bg-info ms-2">@(selectedDocument.Urls.Count + 1) sources available</span>
                            }
                        </h6>
                        
                        <div class="links-container">
                            <!-- Primary Link -->
                            <div class="card border-primary mb-2">
                                <div class="card-body p-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="card-title mb-1 text-primary">
                                                <i class="fas fa-star me-1"></i>Primary Source
                                            </h6>
                                            <small class="text-muted">@selectedDocument.SourceDrive</small>
                                            @if (!string.IsNullOrEmpty(selectedDocument.FolderPath))
                                            {
                                                <br><small class="text-muted">@selectedDocument.FolderPath</small>
                                            }
                                        </div>
                                        <a href="@selectedDocument.WebViewLink" target="_blank" class="btn btn-primary">
                                            <i class="fas fa-external-link-alt me-1"></i> Open
                                        </a>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Additional URLs -->
                            @if (selectedDocument.HasMultipleUrls && selectedDocument.Urls.Any())
                            {
                                @foreach (var (url, index) in selectedDocument.Urls.Select((url, i) => (url, i)))
                                {
                                    <div class="card border-secondary mb-2">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div>
                                                    <h6 class="card-title mb-1">
                                                        <i class="fas fa-clone me-1"></i>Alternative Source @(index + 1)
                                                    </h6>
                                                    <small class="text-muted">@url.SourceDrive</small>
                                                    @if (!string.IsNullOrEmpty(url.FolderPath))
                                                    {
                                                        <br><small class="text-muted">@url.FolderPath</small>
                                                    }
                                                </div>
                                                <a href="@url.WebViewLink" target="_blank" class="btn btn-outline-primary">
                                                    <i class="fas fa-external-link-alt me-1"></i> Open
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                    
                    <!-- Tags Section -->
                    @if (selectedDocument.Tags != null && selectedDocument.Tags.Any())
                    {
                        <div class="mt-4">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-tags me-1"></i>Tags (@selectedDocument.Tags.Count)
                            </h6>
                            <div class="tags-container-modal">
                                @foreach (var tag in selectedDocument.Tags)
                                {
                                    <span class="badge @GetTagColor(tag) me-1 mb-1 position-relative tag-with-remove">
                                        <span class="clickable-tag" @onclick="() => { ToggleTagFilter(tag); CloseModal(); }" 
                                              title="Click to filter by this tag">
                                            @tag
                                        </span>
                                        <button type="button" class="tag-remove-btn" 
                                                @onclick="() => RequestRemoval(tag, GetCategoryFromTag(tag))"
                                                @onclick:stopPropagation="true"
                                                title="Request removal of this tag">
                                            ×
                                        </button>
                                    </span>
                                }
                            </div>
                        </div>
                    }
                    
                    <!-- Community Tag Voting Section -->
                    <div class="mt-4">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <h6 class="text-primary mb-0">
                                <i class="fas fa-users me-1"></i>Community Tags
                            </h6>
                            <button class="btn btn-sm btn-outline-primary" @onclick="() => showSuggestDialog = true">
                                <i class="fas fa-plus me-1"></i>Suggest Tag
                            </button>
                        </div>
                        
                        @if (pendingSuggestions.Any() || pendingRemovals.Any())
                        {
                            <div class="community-tags-list">
                                @foreach (var suggestion in pendingSuggestions)
                                {
                                    <div class="pending-tag-item mb-2 p-2 border rounded">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <span class="badge bg-success me-2">+ @suggestion.TagName</span>
                                                <small class="text-muted">(@suggestion.TagCategory)</small>
                                            </div>
                                            <div class="vote-controls">
                                                <button class="btn btn-sm @(userVotes.ContainsKey(suggestion.Id) && userVotes[suggestion.Id] ? "btn-success" : "btn-outline-success")" 
                                                        @onclick="() => VoteOnSuggestion(suggestion.Id, true)">
                                                    👍 @suggestion.FavorVotes
                                                </button>
                                                <button class="btn btn-sm @(userVotes.ContainsKey(suggestion.Id) && !userVotes[suggestion.Id] ? "btn-danger" : "btn-outline-danger") ms-1" 
                                                        @onclick="() => VoteOnSuggestion(suggestion.Id, false)">
                                                    👎 @suggestion.AgainstVotes
                                                </button>
                                            </div>
                                        </div>
                                        <div class="progress mt-2" style="height: 5px;">
                                            <div class="progress-bar @(suggestion.AgreementPercentage >= 70 ? "bg-success" : "bg-warning")" 
                                                 style="width: @(suggestion.AgreementPercentage)%"></div>
                                        </div>
                                        <small class="text-muted">@suggestion.AgreementPercentage.ToString("F0")% agreement (@suggestion.TotalVotes votes)</small>
                                    </div>
                                }
                                
                                @foreach (var removal in pendingRemovals)
                                {
                                    <div class="pending-tag-item mb-2 p-2 border rounded">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <span class="badge bg-danger me-2">- @removal.TagName</span>
                                                <small class="text-muted">(@removal.TagCategory)</small>
                                            </div>
                                            <div class="vote-controls">
                                                <button class="btn btn-sm @(userVotes.ContainsKey(-removal.Id) && userVotes[-removal.Id] ? "btn-success" : "btn-outline-success")" 
                                                        @onclick="() => VoteOnRemoval(removal.Id, true)">
                                                    👍 @removal.FavorVotes
                                                </button>
                                                <button class="btn btn-sm @(userVotes.ContainsKey(-removal.Id) && !userVotes[-removal.Id] ? "btn-danger" : "btn-outline-danger") ms-1" 
                                                        @onclick="() => VoteOnRemoval(removal.Id, false)">
                                                    👎 @removal.AgainstVotes
                                                </button>
                                            </div>
                                        </div>
                                        <div class="progress mt-2" style="height: 5px;">
                                            <div class="progress-bar @(removal.AgreementPercentage >= 70 ? "bg-success" : "bg-warning")" 
                                                 style="width: @(removal.AgreementPercentage)%"></div>
                                        </div>
                                        <small class="text-muted">@removal.AgreementPercentage.ToString("F0")% agreement (@removal.TotalVotes votes)</small>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted mb-0"><small>No pending tag suggestions or removals for this document.</small></p>
                        }
                    </div>
                    
                    <!-- Suggest Tag Dialog -->
                    @if (showSuggestDialog)
                    {
                        <div class="modal-overlay" @onclick="CloseSuggestDialog">
                            <div class="modal-dialog-centered" @onclick:stopPropagation="true">
                                <div class="card p-3">
                                    <h6 class="mb-3">
                                        <i class="fas fa-tag me-2"></i>Suggest New Tag
                                    </h6>
                                    <div class="mb-2 position-relative">
                                        <label class="form-label">
                                            Tag Name
                                            @if (!string.IsNullOrWhiteSpace(newTagName) && filteredTagSuggestions.Any())
                                            {
                                                <small class="text-muted">(matching @filteredTagSuggestions.Count existing tags)</small>
                                            }
                                        </label>
                                        <input type="text" 
                                               class="form-control" 
                                               value="@newTagName"
                                               @oninput="OnTagNameInput"
                                               @onfocus="() => showTagSuggestions = true"
                                               placeholder="Start typing to see suggestions..." 
                                               autocomplete="off" />
                                        
                                        @if (showTagSuggestions && filteredTagSuggestions.Any())
                                        {
                                            <div class="tag-suggestions-dropdown">
                                                <div class="suggestions-header">
                                                    <small class="text-muted">
                                                        <i class="fas fa-lightbulb me-1"></i>
                                                        Select existing tag or continue typing to create new
                                                    </small>
                                                </div>
                                                @foreach (var suggestion in filteredTagSuggestions.Take(10))
                                                {
                                                    <div class="suggestion-item" @onclick="() => SelectTagSuggestion(suggestion)">
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <span class="fw-bold">@suggestion.Name</span>
                                                                <span class="badge bg-light text-dark ms-2">@suggestion.Category</span>
