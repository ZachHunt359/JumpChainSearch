    // Tag autocomplete methods
    private void OnTagNameInput(ChangeEventArgs e)
    {
        newTagName = e.Value?.ToString() ?? "";
        categoryAutoSelected = false;
        
        if (string.IsNullOrWhiteSpace(newTagName))
        {
            filteredTagSuggestions.Clear();
            showTagSuggestions = false;
        }
        else
        {
            // Filter tags that match the input (case-insensitive, partial match)
            filteredTagSuggestions = availableTags
                .Where(t => t.Name.Contains(newTagName, StringComparison.OrdinalIgnoreCase))
                .OrderByDescending(t => t.Name.StartsWith(newTagName, StringComparison.OrdinalIgnoreCase)) // Exact prefix matches first
                .ThenByDescending(t => t.Count) // Then by popularity
                .ThenBy(t => t.Name) // Then alphabetically
                .ToList();
            
            showTagSuggestions = filteredTagSuggestions.Any();
        }
        
        StateHasChanged();
    }
    
