    private async Task VoteOnSuggestion(int suggestionId, bool isInFavor)
    {
        try
        {
            var request = new
            {
                UserId = userId,
                SuggestionId = (int?)suggestionId,
                RemovalRequestId = (int?)null,
                IsInFavor = isInFavor
            };

            var response = await Http.PostAsJsonAsync("/api/voting/vote", request);
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<VoteResponse>();
                if (result?.Success == true)
                {
                    // Update the local suggestion with new vote stats
                    var suggestion = pendingSuggestions.FirstOrDefault(s => s.Id == suggestionId);
                    if (suggestion != null && result.VoteStats != null)
                    {
                        suggestion.FavorVotes = result.VoteStats.FavorVotes;
                        suggestion.AgainstVotes = result.VoteStats.AgainstVotes;
                        suggestion.TotalVotes = result.VoteStats.TotalVotes;
                        suggestion.AgreementPercentage = result.VoteStats.AgreementPercentage;
                    }
                    
                    userVotes[suggestionId] = isInFavor;
                    StateHasChanged();
                }
            }
        }
        catch
        {
            // Handle error silently
        }
    }

    private async Task VoteOnRemoval(int removalId, bool isInFavor)
    {
        try
        {
            var request = new
            {
                UserId = userId,
                SuggestionId = (int?)null,
                RemovalRequestId = (int?)removalId,
                IsInFavor = isInFavor
            };

            var response = await Http.PostAsJsonAsync("/api/voting/vote", request);
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<VoteResponse>();
                if (result?.Success == true)
                {
                    // Update the local removal with new vote stats
                    var removal = pendingRemovals.FirstOrDefault(r => r.Id == removalId);
                    if (removal != null && result.VoteStats != null)
                    {
                        removal.FavorVotes = result.VoteStats.FavorVotes;
                        removal.AgainstVotes = result.VoteStats.AgainstVotes;
                        removal.TotalVotes = result.VoteStats.TotalVotes;
                        removal.AgreementPercentage = result.VoteStats.AgreementPercentage;
                    }
                    
                    userVotes[-removalId] = isInFavor; // Negative ID for removals
                    StateHasChanged();
                }
            }
        }
        catch
        {
            // Handle error silently
        }
    }

    private string GetCategoryFromTag(string tag)
    {
        // Try to find the tag in available tags first
        var tagInfo = availableTags.FirstOrDefault(t => t.Name == tag);
        if (tagInfo != null)
        {
            return tagInfo.Category;
        }

        // Otherwise try to infer from common patterns
        if (tag == "PDF" || tag == "Word" || tag == "Image" || tag == "Text")
            return "Format";
        if (tag == "Has Text")
            return "Content";
        if (tag.StartsWith("Size:"))
            return "Meta";
        if (tag.Contains("Drive"))
            return "Source";

        return "Other"; // Default fallback
    }

